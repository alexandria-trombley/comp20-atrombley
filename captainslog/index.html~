	// determines the date and sends it back to function call
	function timestamp() {
		var timestamp = new Date();
		return timestamp.toUTCString();
	}

	$("#msg").bind("enterKey", function(event) {
console.log("I am here");
		var old = localStorage.getItem("messages");
